@model IEnumerable<MIS4200Team2.Models.Users>

@{
    ViewBag.Title = "Index";
}

<h2>Users at Centric</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-bordered table-hover table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.firstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.lastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.businessUnit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.userTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.registeredDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.firstName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.lastName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.email)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.phone)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.businessUnit)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.userTitle)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.registeredDate)
    </td>
    <td>
        <span class="glyphicon glyphicon-edit"></span>@Html.ActionLink("Edit", "Edit", new { id = item.UsersID }) |
        <span class="glyphicon glyphicon-book"></span>@Html.ActionLink("Details", "Details", new { id = item.UsersID }) |
        <span class="glyphicon glyphicon-trash"></span>@Html.ActionLink("Delete", "Delete", new { id = item.UsersID })
    </td>
</tr>
}

</table>
